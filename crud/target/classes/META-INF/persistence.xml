<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <!-- UNIDAD DE PERSISTENCIA PARA ORACLE -->
    <persistence-unit name="oracle-pu" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Entidades para los ejemplos de Oracle -->
        <class>com.crud.app.oracle.model.Empleado</class>
        <class>com.crud.app.oracle.model.Producto</class>
        <class>com.crud.app.oracle.model.Persona</class>
        <class>com.crud.app.oracle.model.Estudiante</class>

        <properties>
            <!-- Conexi칩n Oracle -->
            <property name="jakarta.persistence.jdbc.driver" value="oracle.jdbc.driver.OracleDriver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:oracle:thin:@localhost:1521/FREEPDB1"/>
            <property name="jakarta.persistence.jdbc.user" value="appuser"/>
            <property name="jakarta.persistence.jdbc.password" value="appuser123"/>

            <!-- Dialecto Oracle -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.OracleDialect"/>

            <!-- NO crear tablas autom치ticamente (usamos los SQL proporcionados) -->
            <property name="hibernate.hbm2ddl.auto" value="none"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>

    <!-- UNIDAD DE PERSISTENCIA PARA POSTGRESQL -->
    <persistence-unit name="postgres-pu" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Entidades para los ejemplos de PostgreSQL -->
        <class>com.crud.app.postgresql.model.Empleado</class>
        <class>com.crud.app.postgresql.model.ProductoCompuesto</class>
        <class>com.crud.app.postgresql.model.Proyecto</class>
        <class>com.crud.app.postgresql.model.ProductoTech</class>
        <class>com.crud.app.postgresql.model.Persona</class>
        <class>com.crud.app.postgresql.model.Estudiante</class>

        <properties>
            <!-- Conexi칩n PostgreSQL -->
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/testdb"/>
            <property name="jakarta.persistence.jdbc.user" value="admin"/>
            <property name="jakarta.persistence.jdbc.password" value="admin123"/>

            <!-- Dialecto PostgreSQL -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>

            <!-- NO crear tablas autom치ticamente -->
            <property name="hibernate.hbm2ddl.auto" value="none"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>

</persistence>